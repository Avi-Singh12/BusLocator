<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrator Login"
        android:textSize="25dp"
        android:id="@+id/adminLoginTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/userNameLabel"
        android:text="User Name*"
        android:textSize="18dp"
        android:background="@color/white"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@+id/adminLoginTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="167dp"
        android:layout_toStartOf="@+id/userNameEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/passwordLabel"
        android:text="Password"
        android:textSize="18dp"
        android:background="@color/white"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/userNameLabel"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/userNameEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:padding="7dp"
        android:id="@+id/userNameEditText"
        android:background="@color/gray"
        android:layout_alignTop="@+id/userNameLabel"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/adminLoginTextView"
        android:layout_alignStart="@+id/adminLoginTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordEditText"
        android:background="@color/gray"
        android:layout_alignTop="@+id/passwordLabel"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/passwordLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButton"
        android:textSize="18dp"
        android:layout_below="@+id/passwordLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="*In form of an email"
        android:id="@+id/textView"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>